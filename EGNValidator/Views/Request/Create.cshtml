@model RequestViewModel

@{
    ViewData["Title"] = "Create";
}

<center>
    <header>
        @{
            if (TempData["ErrorMessage"] != null)
            {
                <div style="background-color:red">
                    @TempData["ErrorMessage"]
                </div>
            }
            else if (TempData["ResultValid"] != null)
            {
                <div style="background-color:aquamarine">
                    @TempData["ResultValid"]
                </div>
            }
            else if (TempData["ResultNotValid"] != null)
            {
                <div style="background-color:indianred">
                    @TempData["ResultNotValid"]
                </div>
            }

        }
    </header>

    <h4>Enter EGN to check:</h4>
    <hr />
    <div class="row">
        <div class="col-md-4 offset-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EGN" class="control-label"></label>
                    <input asp-for="EGN" class="form-control" />
                    <span asp-validation-for="EGN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</center>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
